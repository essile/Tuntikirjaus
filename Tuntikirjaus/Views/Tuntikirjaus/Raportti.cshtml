    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pvm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tunnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.kuvaus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.laskutettava)
        </td>
        <td>
            <a href="/Tuntikirjaus/Raportti/@Html.DisplayFor(modelItem => item.Henkilo.henkilo_id)">
