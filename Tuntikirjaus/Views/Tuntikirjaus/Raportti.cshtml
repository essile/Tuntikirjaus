@model IEnumerable<Tuntikirjaus.Models.Tuntikirjaus>

@{
    ViewBag.Title = "Raportti";
}

<h2>Raportti</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pvm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tunnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kuvaus)
